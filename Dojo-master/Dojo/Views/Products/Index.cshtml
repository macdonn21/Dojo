@model IEnumerable<Dojo.Models.Product>

@{
    ViewBag.Title = "Inventory Items";

}

<div class="box box-info">

    <div class="box-header with-border">
        <h2>@ViewBag.Title</h2>
    </div>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Product Description
            </th>
            <th>
                Cost Price ($)
            </th>
            <th>
                Selling Price ($)
            </th>
            <th>
                Quantity In Stock
            </th>
            <th>
                Quantity Sold
            </th>
            <th>
               Profit ($)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SellingPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantityInStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantitySold)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Profit)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Product_ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Product_ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Product_ID })
                </td>
            </tr>
        }

    </table>


    <div class="box-body">
        <div class="row">
            <div class="col-lg-20 col-xs-4">
                <!-- small box -->
                <div class="small-box bg-aqua-gradient">
                    <div class="inner">
                        <h3> <p> Profit for the month of @DateTime.Now.ToString("MMMM"):</p></h3>
                        <h3>$ @ViewBag.TotalProfit</h3>
                    </div>
                    <div class="icon">
                        <i class="ion ion-tag"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-20 col-xs-4">
                <!-- small box -->
                <div class="small-box bg-green-gradient">
                    <div class="inner">
                        <h3> <p>Total Profit from Inventory Sales:</p></h3>
                        <h3>$ @ViewBag.TotalProfit</h3>
                    </div>
                    <div class="icon">
                        <i class="ion ion-tag"></i>
                    </div>
                </div>
            </div>
        </div>

    </div>
    </div>
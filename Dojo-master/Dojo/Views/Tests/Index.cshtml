@model IEnumerable<Dojo.Models.Test>

@{
    ViewBag.Title = "Test";
}

<div class="box box-info">

    <div class="box-header with-border">
        <h2>@ViewBag.Title</h2>
    </div>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rank.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profit)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            var profit = item.Profit ?? "0";

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rank.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => profit)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Test_ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Test_ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Test_ID })
                </td>
            </tr>
        }

    </table>
    <div class="box-body">
        <div class="row">
            <div class="col-lg-20 col-xs-4">
                <!-- small box -->
                <div class="small-box bg-aqua-gradient">
                    <div class="inner">
                        <h3> <p> Profit for the month of @DateTime.Now.ToString("MMMM"):</p></h3>
                        <h3>@ViewBag.TotalProfit</h3>
                    </div>
                    <div class="icon">
                        <i class="ion ion-tag"></i>
                    </div>
                </div>

            </div>
            <div class="col-lg-20 col-xs-4">
                <!-- small box -->
                <div class="small-box bg-green-gradient">
                    <div class="inner">
                        <h3> <p>Total Profit from Test:</p></h3>
                        <h3>@ViewBag.TotalProfit</h3>
                    </div>
                    <div class="icon">
                        <i class="ion ion-tag"></i>
                    </div>
                </div>
            </div>
        </div>

    </div>
    </div>